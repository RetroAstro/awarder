{
  "extends": "stylelint-config-standard",
  "plugins": ["stylelint-scss"],
  "rules": {
    "block-no-empty": null,
    "color-no-invalid-hex": true,
    "unit-whitelist": ["em", "rem", "%", "px", "vw", "vh", "s"],
    "selector-list-comma-newline-after": ["never-multi-line"],
    "no-descending-specificity": null
  }
}
